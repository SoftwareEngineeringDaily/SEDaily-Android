<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.koalatea.thehollidayinn.softwareengineeringdaily.subscription.PlanFragment">

    <androidx.appcompat.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/monthlyCardView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cost_text"
                android:padding="8dp"
                android:textSize="48sp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$10/mo" />

            <TextView
                android:id="@+id/info_text"
                android:padding="8dp"
                android:textSize="24sp"
                android:layout_below="@+id/cost_text"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Billed Monthly" />

            <Button style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_text"
                android:layout_centerHorizontal="true"
                android:id="@+id/monthlyButton"
                android:text="Select"/>

        </RelativeLayout>

    </androidx.appcompat.widget.CardView>


    <androidx.appcompat.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/yearlyCardView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/monthlyCardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cost_text2"
                android:padding="8dp"
                android:textSize="48sp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$100/yr" />

            <TextView
                android:id="@+id/info_text2"
                android:padding="8dp"
                android:textSize="24sp"
                android:layout_below="@+id/cost_text2"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Billed Yearly" />

            <Button style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_text2"
                android:layout_centerHorizontal="true"
                android:id="@+id/yearlyButton"
                android:text="Select"/>

        </RelativeLayout>
    </androidx.appcompat.widget.CardView>

</RelativeLayout>
